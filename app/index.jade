doctype html
html(lang="en-US")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Weather App
    link(rel="stylesheet" href="/vendor/foundation/css/foundation.css")


  body
   .row
      .large-12.columns
        // Navigation
        nav.top-bar(data-topbar='')
          ul.title-area
            // Title Area
            li.name
              h1
                a(href='#')
                  | Weekly Forecast
            li.toggle-topbar.menu-icon
              a(href='#')
                span menu
          section.top-bar-section
            ul.right
              li.search
                form
                  input(type='text' id='zipcode' placeholder='Zip Code')
              li.has-button
                a.small.button(href='#') Submit
        // End Navigation
    .row
      .large-12.columns
        // Desktop Slider
        .hide-for-small
          #featured
            img(src='http://placehold.it/1000x400&text=Slide Image', alt='slide image')
        // End Desktop Slider
        // Mobile Header
        .row
          .small-12.show-for-small
            br
            img(src='http://placehold.it/1000x600&text=For Small Screens')
           br
        // End Mobile Header
    .row
      .large-12.columns
        .row
          // Thumbnails
          .large-3.small-6.columns
            img(src='http://placehold.it/250x250&text=Thumbnail')
            h6.panel Description
          .large-3.small-6.columns
            img(src='http://placehold.it/250x250&text=Thumbnail')
            h6.panel Description
          .large-3.small-6.columns
            img(src='http://placehold.it/250x250&text=Thumbnail')
            h6.panel Description
          .large-3.small-6.columns
            img(src='http://placehold.it/250x250&text=Thumbnail')
            h6.panel Description

    script(src="js/main.js")
